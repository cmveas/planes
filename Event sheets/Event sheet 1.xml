                <condition id="-7" name="Compare instance variable" type="spr_enemy">
                    <param id="0" name="Instance variable">Entra</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">1</param>
                </condition>
            </conditions>
