                    <param id="1" name="Value">10</param>
                </action>
                <action id="-9" name="Destroy" type="spr_bullet" />
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-6" name="Every X seconds" type="System">
                    <param id="0" name="Interval (seconds)">1</param>
                </condition>
